<h1>Add youtube video</h1>

<div class="row" id="youtubeoverlay">
  <div class="cell position-0 width-1:2">
    <form>
      <div class="field ArchetypesStringWidget">
        <span></span>
        <label class="formQuestion">
          URL
          <span class="required" title="Required">&nbsp;</span>
          <span class="formHelp" id="title_help">
            Enter the url as you see if directly from the browser.
          </span>
        </label>
        <div class="fieldErrorBox"></div>
        <input type="text" name="youtubeurl" class="blurrable firstToFocus"
              id="youtubeurl" value="" placeholder="YouTube URL" size="50" maxlength="500" />
      </div>
      <div class="field ArchetypesIntegerWidget">
        <span></span>
        <label class="formQuestion">
          Width
          <span class="required" title="Required">&nbsp;</span>
        </label>
        <div class="fieldErrorBox"></div>
        <input type="text" name="youtubewidth" class="blurrable"
              id="youtubewidth" value="500" placeholder="Width" />
      </div> 
      <div class="field ArchetypesIntegerWidget">
        <span></span>
        <label class="formQuestion">
          Height
          <span class="required" title="Required">&nbsp;</span>
        </label>
        <div class="fieldErrorBox"></div>
        <input type="text" name="youtubeheight" class="blurrable"
              id="youtubeheight" value="300" placeholder="Height" />
      </div>
      <div class="field ArchetypesBooleanWidget">
        <input class="noborder" type="checkbox" value="on" name="youtubeprivacymode" id="youtubeprivacymode" >
        <label class="formQuestion">
          Privacy Mode
          <span class="formHelp">If selected, will generate youtube url using youtube-nocookie.com domain.</span>
        </label>
        <div class="fieldErrorBox"></div>
        <div></div>
      </div>
      <div class="field ArchetypesBooleanWidget">
        <input class="noborder" type="checkbox" value="on" name="youtubeshowinfo" id="youtubeshowinfo" checked="checked">
        <label class="formQuestion">
          Show info
          <span class="formHelp">If selected, then the player will display information like the video title and uploader before the video starts playing.</span>
        </label>
        <div class="fieldErrorBox"></div>
        <div></div>
      </div>
      <div class="field ArchetypesBooleanWidget">
        <input class="noborder" type="checkbox" value="on" name="youtubemodestbranding" id="youtubemodestbranding" checked="checked">
        <label class="formQuestion">
          Hide branding
          <span class="formHelp">If selected, this will prevent the YouTube logo from displaying in the control bar.</span>
        </label>
        <div class="fieldErrorBox"></div>
        <div></div>
      </div>

      <div class="field ArchetypesSelectionWidget" name="align" id="align">
      	<span class="fieldRequired" title="Required">
        	(Required)
		</span>
        <label class="formQuestion">
          Align
          <span class="formHelp">Works as image left, right</span>
        </label>
        <div class="fieldErrorBox"></div>
 		<input class="noborder blurrable" name="align_no" value="None" type="radio" />
   			<label for="align_no">None</label>
 	    <br />
		<input class="noborder blurrable" name="align_left" value="Left" type="radio" />
  			<label for="align_left">Left</label>
  			<br />
 		<input class="noborder blurrable" name="align_right" value="Right" type="radio" />
   			<label for="align_right">Right</label>
 	    <br />
    
	 </div>

 
      <div class="formControls">
        <button class="context insert" type="submit" name="form.button.insert">Insert</button>
        <button class="standalone cancel" type="submit" name="form.button.cancel">Cancel</button>
      </div>
    </form>
  </div>
  <div class="cell preview position-1:2 width-1:2">
    <h2>Preview</h2>
    <div class="container">

    </div>
  </div>
</div>
